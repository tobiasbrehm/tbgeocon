        <img src="../../media/public/geology_mining04.jpg">
    </div>
    
    <div class="mySlides1 fade">
        <img src="../../media/public/geology_mining05.jpg">
    </div>
    
    <div class="dot-positioning">
        <span class="dot1"></span> 
        <span class="dot1"></span> 
        <span class="dot1"></span> 
        <span class="dot1"></span> 
        <span class="dot1"></span> 
    </div>

    <!-- Image Slideshow 1 Script -->
    <script>
        let slideIndex1 = 0;
        showSlides1();
        
        function showSlides1() {
            let i1;
            let slides1 = document.getElementsByClassName("mySlides1");
            let dots1 = document.getElementsByClassName("dot1");
            for (i1 = 0; i1 < slides1.length; i1++) {
            slides1[i1].style.display = "none";  
            }
            slideIndex1++;
            if (slideIndex1 > slides1.length) {slideIndex1 = 1}    
            for (i1 = 0; i1 < dots1.length; i1++) {
            dots1[i1].className = dots1[i1].className.replace(" active", "");
            }
            slides1[slideIndex1-1].style.display = "block";  
            dots1[slideIndex1-1].className += " active";
            setTimeout(showSlides1, 5000); // Change image every 5 seconds
        }
        </script>
    
</div>



